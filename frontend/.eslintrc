{
    "parser": "babel-eslint", 
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },
    "extends": [
        "eslint:recommendted",
        "plugin:react/recommended"
    ],
    "plugins": [
        "import",
        "react-hooks"
    ],
    "rules": {
        "react-hooks/rules-of-hooks": "error",      // checks rules of Hooks
        "react-hooks/exhaustive-deps": "warn"       // checks effect of dependencies
    }
}